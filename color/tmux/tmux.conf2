#非活动tab
set-option -g window-status-format '#[fg=#949cbb,bg=#292c3c]#[fg=#282828,bg=#949cbb]#I #[fg=#282828,bg=#414559]  #(ps -o comm= -t #{pane_tty}) #[fg=#414559,bg=#292c3c,nobold]'


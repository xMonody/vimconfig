# status bar right
set-option -g status-right-length 40
set-option -g status-right-style none

set-option -g status-right "#[fg=#8caaee,bg=#292c3c]#[fg=#282828,bg=#8caaee] #[fg=#282828,bg=#babbf1] %H:%M #[fg=#282828,bg=#8caaee]  #[fg=#282828,bg=#babbf1] %m-%d "


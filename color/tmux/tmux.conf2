# 状态栏样式
# status bar
set-option -g status-style none,fg=#292c3c,bg=#292c3c #背景颜色


if-shell 'test "$(uname)" = "Darwin"' {
  set-option -g @OS ""
  set-option -g @IM "#(whoami)#{?SSH_CLIENT,@#h,}"
} {
  set-option -g @OS ""
  set-option -g @IM "#(whoami)#{?SSH_CLIENT,@#h,}"
}

